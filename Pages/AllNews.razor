@page "/allnews"
@using WeBScraper_CourseProject_.Data
@inject IScraperService ScraperService

<h3>AllNews</h3>


@if (LstData == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in LstData)
        {


            <div class="col">
                <div class="card h-100">
                    <img src="@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Sport</h5>
                        <p class="card-text">@item.Title</p>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary">Add to  <i class="bi bi-heart"></i></button>


                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
                </div>
            </div>

        }

    </div>
}

@code {
    public List<News> LstData;    
    News news = new News();    

    protected override async Task OnInitializedAsync()
    {
        LstData = await ScraperService.GetAllNews();
        
    }


    async Task ShowNews(string image, string title, string details)
    {
        if (news == null)
        {
            news = new News
                {
                    Img = image,
                    Title = title,
                    Details = details
                };
            await ScraperService.AddNews(news);
        }
        else
        {
            news.Img = image;
            news.Title = title;
            news.Details = details;
            await ScraperService.AddNews(news);
            news = null;
        }
    }


}
